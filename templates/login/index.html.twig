{% set title = 'Se connecter' %}

{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<section class='container'>

    <div class="columns is-centered py-6">
        <div class="column is-half box px-4 py-4">
            <form action="{{ path('app_login') }}" method="post">

                <div class="field">
                    <div class="control has-icons-left">
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                            class="input is-rounded" placeholder="Email" />
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>

                <div class="field">
                    <div class="control has-icons-left has-icons-right">
                        <input type="password" id="password" name="_password" class="input is-rounded"
                            placeholder="Mot de passe" />
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                        <span class="icon is-small is-right mr-1 ">
                            <i class="fas fa-eye is-clickable "></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <p class="control">
                    <div class="b-checkbox is-circular is-primary">
                        <input id="checkbox" class="styled" checked type="checkbox" name="_remember_me">
                        <label for="checkbox">
                            Se souvenir de moi
                        </label>
                    </div>
                    </p>
                </div>
                <div class="field is-grouped is-justify-content-space-between">
                    <div class="control">
                        <input type="hidden" name="_target_path" value="/user/steps" />
                        <button type="submit" class="button is-rounded is-primary">Se connecter</button>
                    </div>
                    <div class="control">
                        <a href="{{path('app_register')}}" class="button is-rounded is-outlined">Cr√©er un compte</a>
                        <p>Pas encore de compte ? </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}