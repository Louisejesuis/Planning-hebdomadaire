<section class="hero is-light">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item">
                        <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
                    </a>
                    <span class="navbar-burger" data-target="navbarMenu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </div>
                <div id="navbarMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <div class="navbar-item has-dropdown">
                            <a href="#" class="navbar-link">
                                <span class="icon-text">
                                    <span class="icon">
                                        <i class="fas fa-user"></i>
                                    </span>

                                    <span>{{is_granted('ROLE_USER') ? app.user.firstName : ''}}</span>
                                </span>
                            </a>
                            <div class="navbar-dropdown is-boxed">
                                {% if is_granted('ROLE_USER') %}
                                <a class="navbar-item"
                                    href="{{path('app_user_edit', parameters = {'id'  : app.user.id})}}">
                                    Mon compte
                                </a>
                                <a class="navbar-item" href="{{path('app_logout')}}">
                                    Se déconnecter
                                </a>

                                {% else %}
                                <a class="navbar-item" href="{{path('app_login')}}">
                                    Se connecter
                                </a>
                                <a class="navbar-item" href="{{path('app_register')}}">
                                    Créer un compte
                                </a>
                                {% endif %}
                            </div>

                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="navbar-item has-dropdown">
                            <a href="#" class="navbar-link">
                                <span class="icon-text">
                                    <span class="icon">
                                        <i class="fas fa-pen-to-square"></i>
                                    </span>

                                    <span>Administrateur</span>
                                </span>
                            </a>
                            <div class="navbar-dropdown is-boxed">
                                <a class="navbar-item" href="{{path('app_user_index')}}">
                                    Utilisateurs
                                </a>
                                <a class="navbar-item" href="{{path('app_step_index')}}">
                                    Démarches
                                </a>

                                <a class="navbar-item" href="{{path('app_step_category_index')}}">
                                    Catégories des démarches
                                </a>
                            </div>

                        </div>
                        {% endif %}
                        <a class="navbar-item">
                            Home
                        </a>
                        <a class="navbar-item" href="{{path('app_user_steps_index')}}">
                            Mes démarches
                        </a>
                        <a class="navbar-item" href="{{path('app_user_steps_new')}}">
                            Ajouter une démarche
                        </a>
                    </div>
                </div>
        </nav>
    </div>

    <div class="hero-body pt-6">
        <div class="container has-text-centered">
            <p class="title">
                {{title}}
            </p>
            <p class="subtitle">
                semaine n°{{ "now"|date('W')}}
                :
                {{ "now"|date()|format_datetime('full', 'none', locale='fr') }}
            </p>
        </div>
    </div>

</section>