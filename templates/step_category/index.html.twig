{% extends 'base.html.twig' %}

{% block title %}StepCategory index{% endblock %}

{% block body %}
    <h1>StepCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step_category in step_categories %}
            <tr>
                <td>{{ step_category.id }}</td>
                <td>{{ step_category.name }}</td>
                <td>
                    <a href="{{ path('app_step_category_show', {'id': step_category.id}) }}">show</a>
                    <a href="{{ path('app_step_category_edit', {'id': step_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_step_category_new') }}">Create new</a>
{% endblock %}
